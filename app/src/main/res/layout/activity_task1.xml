<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Task1">

    <TextView
            android:text="Среднее число"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextFirstNum"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSecondNum"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:minHeight="48dp" android:hint="number1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextSecondNum"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextFirstNum"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextThirdNum"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:minHeight="48dp" android:hint="number2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextThirdNum"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextSecondNum"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/task1Button" app:layout_constraintHorizontal_bias="0.0"
            android:minHeight="48dp" android:hint="number3"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task1Button"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextThirdNum"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.243"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="452dp"/>
    <TextView
            android:text="Результат"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextThirdNum"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>