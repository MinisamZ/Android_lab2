<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Task2">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextYearField"
            android:hint="Введите год" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonYearTask2" app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintVertical_bias="0.0" android:minHeight="48dp"/>
    <TextView
            android:text="Високосный год"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            tools:ignore="MissingConstraints" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextYearField"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTask2Result"
            android:hint="Результат" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextYearField" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Вычислить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonYearTask2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextYearField"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="570dp" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>